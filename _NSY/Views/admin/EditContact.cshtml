@model IEnumerable<_NSY.Models.InfoApartment>
@{
    ViewBag.Title = "Cập nhật thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Assets/dist/css/hide-arrow-number.css">
}

@section scripts {
    <script src="~/Assets/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        });</script>
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Cập nhật thông tin</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body register-card-body">
                    <p class="login-box-msg">
                        <b>CẬP NHẬT THÔNG TIN CHUNG CƯ</b>
                    </p>
                    @using (Html.BeginForm("EditContact", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <p><span style="color:red">@ViewData["Err1"]</span></p>
                        <p><span style="color:Highlight">@ViewBag.Success</span></p>
                        foreach (var a in Model)
                        {
                            <label>Name Apartment</label>
                            <div class="input-group mb-3">
                                @Html.TextBox("nameApartment", null, new { @class = "form-control", type = "text", placeholder = "Tên chung cư", Value = a.nameApartment })
                                <div class="input-group-append"><div class="input-group-text"></div></div>
                            </div>
                            <label>Address Apartment</label>
                            <div class="input-group mb-3">
                                @Html.TextBox("addressApartment", null, new { @class = "form-control", type = "text", placeholder = "Địa chỉ chung cư", Value = a.addressApartment })
                                <div class="input-group-append"><div class="input-group-text"></div></div>
                            </div>
                            <label>Phone Apartment</label>
                            <div class="input-group mb-3">
                                @Html.TextBox("telApartment", null, new { @class = "form-control", type = "number", placeholder = "Số điện thoại chung cư", Value = a.telApartment })
                                <div class="input-group-append"><div class="input-group-text"></div></div>
                            </div>
                            <label>Email Apartment</label>
                            <div class="input-group mb-3">
                                @Html.TextBox("emailApartment", null, new { @class = "form-control", type = "email", placeholder = "Email chung cư", Value = a.emailApartment })
                                <div class="input-group-append"><div class="input-group-text"></div></div>
                            </div>
                            <label>Tittle Navbar</label>
                            <div class="input-group mb-3">
                                @Html.TextBox("tittleNavbar", null, new { @class = "form-control", type = "text", placeholder = "Tiêu đề Navbar", Value = a.tittleNavbar })
                                <div class="input-group-append"><div class="input-group-text"></div></div>
                            </div>
                        }
                        <div class="form-group">
                            <label for="image">Ảnh Navbar</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="image" accept="image/*" name="image">
                                <label class="custom-file-label text-muted" for="image">Chọn ảnh Navbar</label>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-md-auto">
                                    <button type="submit" class="btn btn-primary btn-block">Cập nhật</button>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
