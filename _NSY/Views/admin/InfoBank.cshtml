@model IEnumerable<_NSY.Models.InfoBank>
@{
    ViewBag.Title = "Thông tin thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    @*<link rel="stylesheet" href="~/Assets/dist/css/hide-arrow-number.css">*@
}
@section scripts {
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({ "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1
            $("#example2").DataTable({ "lengthMenu": [[10, 25, 50, 150, 200], [10, 25, 50, 150, 200]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1
            $("#example3").DataTable({ "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1

        });
    </script>
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Thêm thông tin thanh toán</h1>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    @using (Html.BeginForm("InfoBank", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <p><span style="color:red">@ViewData["Err"]</span></p>
                        <div class="card card-widget card-dark collapsed-card">
                            <div class="card-header">
                                <h3 class="card-title">Thêm thông tin thanh toán</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i> </button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Tên ngân hàng</label>
                                    <div class="col-sm-10">
                                        @Html.TextBox("nameBank", null, new { @class = "form-control", type = "text", placeholder = "Tên ngân hàng" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Số tài khoản</label>
                                    <div class="col-sm-10">
                                        @Html.TextBox("numberBank", null, new { @class = "form-control", type = "text", placeholder = "Số tài khoản" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Chủ tài khoản</label>
                                    <div class="col-sm-10">
                                        @Html.TextBox("ownerBank", null, new { @class = "form-control", type = "text", placeholder = "Chủ tài khoản" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Chi nhánh</label>
                                    <div class="col-sm-10">
                                        @Html.TextBox("ChiNhanhBank", null, new { @class = "form-control", type = "text", placeholder = "Chi nhánh" })
                                    </div>
                                </div>
                                <p><span style="color:red">@ViewData["Err1"]</span></p>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-secondary" onclick="return confirm('Bạn có chắc muốn thêm thông tin thanh toán này ?')">Thêm</button>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title text-danger"><b>Thông tin thanh toán</b></h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-2">
                            <table id="example1" class="table table-bordered table-striped text-nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>STT</th>
                                        <th>Tên ngân hàng</th>
                                        <th>Số tài khoản</th>
                                        <th>Chủ sở hữu</th>
                                        <th>Chi nhánh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 0; }
                                    @foreach (var a in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("EditInfoBank", "admin", new { id = a.idInfoBank })"><i><i class="nav-icon fas fa-edit"></i></a>&emsp;
                                                <a href="@Url.Action("DeleteInfoBank", "admin", new { id = a.idInfoBank })" onclick="return confirm('Bạn có chắc muốn xóa thông tin này ?')"><i class="nav-icon fas fa-trash"></i></a>
                                            </td>
                                            <td>@i</td>
                                            <td>@a.nameBank</td>
                                            <td>@a.numberBank</td>
                                            <td>@a.ownerBank</td>
                                            <td>@a.ChiNhanhBank</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
    <!-- End Main content -->
</div>

