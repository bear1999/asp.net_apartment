@model IEnumerable<_NSY.Models.owner_home>
@{
    ViewBag.Title = "Chi tiết căn hộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

@section scripts {
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({ "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1
        });
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Chi tiết căn hộ</h1>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-danger btn-sm" href="javascript:history.go(-1)"><i class="fas fa-chevron-circle-left"></i>&nbsp;&nbsp;<b>Quay lại</b></a>
                <p></p>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-danger"><b>Mã căn hộ đăng ở</b></h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i> </button>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-valign-middle text-nowrap">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã căn hộ sở hữu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i2 = 0;}
                                @foreach (var d in Model)
                                {
                                    i2++;
                                    <tr>
                                        <td><b>@i2</b></td>
                                        <td><a href="@Url.Action("canho", "manage", new { id = d.idHome })">@d.idHome</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Small boxes (Stat box) -->
            </div>
            <!-- /.card -->
        </div>
    </section>
    <!-- End Main content -->
</div>
