@model IEnumerable<_NSY.Models.ApartmentManager>
@{
    ViewBag.Title = "Xác nhận thanh toán căn hộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Assets/dist/css/hide-arrow-number.css">
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Xác nhận thanh toán căn hộ</h1>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card card-dark">
                        <div class="card-header">
                            <h3 class="card-title">Xác nhận thanh toán căn hộ</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm("xacnhanthanhtoancanho", "manage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            foreach (var tt in Model)
                            {
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Mã căn hộ</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" value="@tt.idMain" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ngày đăng ký</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" value="@Convert.ToDateTime(tt.DateRent).ToString("dd/MM/yyyy")" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ngày hết hạn</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" value="@Convert.ToDateTime(tt.ExpRent).ToString("dd/MM/yyyy")" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Số ngày đã thánh toán</label>
                                        <div class="col-sm-10">
                                            @Html.TextBox("ThanhToan", null, new { @class = "form-control", type = "number", placeholder = "Nhập số ngày đã thanh toán ( chu kỳ 1 tháng 30 ngày )" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <span style="color:red"><b>@ViewData["Err"]</b></span>
                                        <span style="color:Highlight"><b>@ViewData["Success"]</b></span>
                                    </div>
                                </div>
                            }
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success" onclick="return confirm('Bạn có muốn xác nhận thanh toán ?')">Đã thanh toán</button>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
    <!-- End Main content -->
</div>
