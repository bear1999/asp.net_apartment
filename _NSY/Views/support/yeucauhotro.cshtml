@model _NSY.Models.Hotro
@{
    ViewBag.Title = "Yêu cầu hỗ trợ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Assets/plugins/summernote/summernote-bs4.css">
}
@section scripts {
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({ "lengthMenu": [[10, 25, 50, 150, 200], [10, 25, 50, 150, 200]] }); //Cái [] ngoài cùng hiện tên vd:"Tất cả" thì = -1
        });
    </script>
    <script src="~/Assets/plugins/summernote/summernote-bs4.js"></script>
    <script>
        $(function () {
            $('#compose-textarea').summernote({
                height: 250,
                placeholder: 'Nội dung'
            })
        })
    </script>
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Yêu cầu hỗ trợ</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("yeucauhotro", "support", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        if (ViewData["Success"] != null)
                        {
                            <div class="alert alert-success">@ViewData["Success"]</div>
                        }
                        else if (ViewData["Err"] != null)
                        {
                            <div class="alert alert-danger">@ViewData["Err"]</div>
                        }
                        <div class="card card-widget card-dark collapsed-card">
                            <div class="card-header">
                                <h3 class="card-title">Tạo yêu cầu hỗ trợ</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i> </button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Chọn loại yêu cầu</label>
                                    <div class="col-sm-10">
                                        <select name="typeNV" class="form-control">
                                            <option value="1" selected>Nhân viên kinh doanh</option>
                                            <option value="2">Nhân viên quản lý</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Tiêu đề</label>
                                    <div class="col-sm-10">
                                        @Html.TextBox("TittleTicket", null, new { @class = "form-control", type = "text", placeholder = "Nhập tiêu đề" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Nội dung</label>
                                    <div class="col-sm-10">
                                        @Html.TextArea("tText", null, new { @class = "form-control", id = "compose-textarea" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Gửi yêu cầu</button>
                            </div>
                        </div>
                    }
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title text-danger"><b>Danh sách hỗ trợ đã gửi</b></h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-2">
                            <table id="example1" class="table table-bordered table-striped text-center text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Mã hỗ trợ</th>
                                        <th>Người tạo</th>
                                        <th>Ngày tạo</th>
                                        <th>Tiêu đề</th>
                                        <th>Trạng thái</th>
                                        <th>Hoạt động cuối</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in Model.Ticket)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("chitietyeucauhotro", "support", new { id = a.idTicket })">@a.idTicket</a></td>
                                            <td>@a.Email</td>
                                            <td>@Convert.ToDateTime(a.DateCreate).ToString("dd/MM/yyy HH:mm:ss")</td>
                                            <td>@a.TittleTicket</td>
                                            <td>@a.NameStatus</td>
                                            <td>@a.LastRep</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>